<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BBB Standards Assistant" 
        Height="750" Width="500"
        MinHeight="500" MinWidth="400"
        WindowStartupLocation="CenterScreen"
        Background="#F3F3F3"
        Topmost="True">
    
    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#0078D4"/>
        <SolidColorBrush x:Key="PrimaryDarkColor" Color="#005A9E"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#F3F3F3"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextPrimaryColor" Color="#323130"/>
        <SolidColorBrush x:Key="TextSecondaryColor" Color="#605E5C"/>
        <SolidColorBrush x:Key="UserBubbleColor" Color="#0078D4"/>
        <SolidColorBrush x:Key="AssistantBubbleColor" Color="#FFFFFF"/>

        <!-- Base Styles -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        </Style>

        <!-- Message Bubbles -->
        <Style x:Key="MessageBubbleUser" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource UserBubbleColor}"/>
            <Setter Property="CornerRadius" Value="12,12,0,12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="50,5,10,5"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.1" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="MessageBubbleAssistant" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource AssistantBubbleColor}"/>
            <Setter Property="CornerRadius" Value="12,12,12,0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="10,5,50,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.1" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryDarkColor}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button Style (for dynamic buttons) -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- History Item Style -->
        <Style x:Key="HistoryItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="0">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E7F3FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>                            <!-- Main Chat -->
            <ColumnDefinition x:Name="SidebarColumn" Width="0"/>  <!-- Sidebar starts closed -->
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar -->
        <Border x:Name="Sidebar" 
                Grid.Column="1" 
                Background="{StaticResource SurfaceColor}" 
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>     <!-- History List -->
                </Grid.RowDefinitions>
                
                <!-- History List -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Chat History" 
                                  FontWeight="SemiBold" 
                                  FontSize="12"
                                  Foreground="{StaticResource TextSecondaryColor}"
                                  Margin="15,10,15,8"/>
                        <ListBox x:Name="HistoryListBox"
                                Background="Transparent"
                                BorderThickness="0"
                                ItemContainerStyle="{StaticResource HistoryItemStyle}">
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Main Chat Area -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="*"/>     <!-- Messages -->
                <RowDefinition Height="Auto"/>  <!-- Input -->
            </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceColor}" Padding="15,12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.05" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Icon Button -->
                <Button x:Name="HeaderIconButton"
                        Grid.Column="0"
                        Width="28" 
                        Height="28"
                        Margin="0,0,12,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="0"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        ToolTip="Open BBB Revit Standards Site">
                    <Button.Content>
                        <Image x:Name="HeaderIcon" 
                               Width="28" 
                               Height="28"/>
                    </Button.Content>
                </Button>
                
                <!-- Title and Status -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="BBB Standards Assistant" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="{StaticResource TextPrimaryColor}"/>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="6" Height="6" Fill="#107C10" Margin="0,1,6,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="StatusText" 
                                  Text="Ready" 
                                  FontSize="11" 
                                  Foreground="{StaticResource TextSecondaryColor}"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Header Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- New Chat Button -->
                    <Button x:Name="NewChatButton"
                            Width="32"
                            Height="32"
                            Margin="0,0,4,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Start New Chat">
                        <Button.Content>
                            <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" 
                                  Fill="{StaticResource TextSecondaryColor}"
                                  Stretch="Uniform"
                                  Width="16"
                                  Height="16"/>
                        </Button.Content>
                    </Button>

                    <!-- Toggle Sidebar Button -->
                    <Button x:Name="ToggleSidebarButton"
                            Width="32"
                            Height="32"
                            Margin="0,0,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Toggle History">
                        <Button.Content>
                            <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" 
                                  Fill="{StaticResource TextSecondaryColor}"
                                  Stretch="Uniform"
                                  Width="20"
                                  Height="20"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Messages Area -->
        <ScrollViewer Grid.Row="1" 
                     x:Name="MessageScrollViewer"
                     VerticalScrollBarVisibility="Auto"
                     Padding="10,15">
            <StackPanel x:Name="MessagesPanel">
                <!-- Welcome message -->
                <Border Style="{StaticResource MessageBubbleAssistant}">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextPrimaryColor}" LineHeight="20">
                            <Run Text="Hi! I'm here to help you with BBB's Revit standards." FontWeight="SemiBold"/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run Text="Ask me anything about BBB's Revit standards and I'll point you to the right information."/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Input Area -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceColor}" 
                Padding="15">
            <Border.BorderBrush>
                <SolidColorBrush Color="#E0E0E0"/>
            </Border.BorderBrush>
            <Border.BorderThickness>
                <Thickness Top="1"/>
            </Border.BorderThickness>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" 
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Background="#FAFAFA"
                        Padding="2">
                    <TextBox x:Name="InputTextBox" 
                            TextWrapping="Wrap"
                            MaxHeight="100"
                            VerticalScrollBarVisibility="Auto"
                            Padding="8"
                            FontSize="13"
                            BorderThickness="0"
                            Background="Transparent"
                            VerticalContentAlignment="Center"/>
                </Border>
                
                <Button x:Name="SendButton" 
                       Grid.Column="1"
                       Style="{StaticResource ModernButtonStyle}"
                       Content="Send"
                       Width="70"
                       Height="36"
                       Margin="10,0,0,0"
                       VerticalAlignment="Bottom"/>
            </Grid>
        </Border>
        
        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" 
              Grid.Row="0"
              Grid.RowSpan="3" 
              Background="#90FFFFFF" 
              Visibility="Collapsed">
            <Border Background="{StaticResource SurfaceColor}" 
                   Padding="30,25" 
                   CornerRadius="8"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel Width="280">
                    <!-- Spinning Circle -->
                    <Grid Height="50" Margin="0,0,0,15">
                        <Ellipse x:Name="LoadingSpinner"
                                Width="40" 
                                Height="40"
                                Stroke="{StaticResource PrimaryColor}"
                                StrokeThickness="4"
                                StrokeDashArray="25 75"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotation" Angle="0"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                    </Grid>
                    
                    <TextBlock Text="Working on it..." 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"
                              Foreground="{StaticResource TextPrimaryColor}"/>
                    <TextBlock x:Name="LoadingStatusText" 
                              Text="Searching standards database..." 
                              FontSize="13" 
                              Foreground="{StaticResource TextSecondaryColor}"
                              Margin="0,8,0,0"
                              TextWrapping="Wrap"
                              TextAlignment="Center"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
        </Grid>
    </Grid>
</Window>
