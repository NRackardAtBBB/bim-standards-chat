<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kodama Setup"
        Width="360"
        SizeToContent="Height"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        ShowInTaskbar="False"
        Topmost="True"
        Background="#F3F3F3">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor"       Color="#0078D4"/>
        <SolidColorBrush x:Key="TextPrimaryColor"   Color="#323130"/>
        <SolidColorBrush x:Key="TextSecondaryColor" Color="#605E5C"/>
        <SolidColorBrush x:Key="SuccessColor"       Color="#107C10"/>
        <SolidColorBrush x:Key="ErrorColor"         Color="#A80000"/>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
            <Setter Property="FontSize"   Value="12"/>
        </Style>

        <!-- Flat icon-style close button (title row) -->
        <Style x:Key="DismissButtonStyle" TargetType="Button">
            <Setter Property="Background"   Value="Transparent"/>
            <Setter Property="BorderBrush"  Value="Transparent"/>
            <Setter Property="Foreground"   Value="{StaticResource TextSecondaryColor}"/>
            <Setter Property="FontFamily"   Value="Segoe UI"/>
            <Setter Property="FontSize"     Value="14"/>
            <Setter Property="Width"        Value="24"/>
            <Setter Property="Height"       Value="24"/>
            <Setter Property="Padding"      Value="0"/>
            <Setter Property="Cursor"       Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary action button (Launch Now) -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background"  Value="#0078D4"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground"  Value="#FFFFFF"/>
            <Setter Property="FontFamily"  Value="Segoe UI"/>
            <Setter Property="FontSize"    Value="12"/>
            <Setter Property="Height"      Value="28"/>
            <Setter Property="Padding"     Value="14,0"/>
            <Setter Property="Cursor"      Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="#C8C6C4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary action button (Dismiss) -->
        <Style x:Key="DismissActionButtonStyle" TargetType="Button">
            <Setter Property="Background"        Value="Transparent"/>
            <Setter Property="BorderBrush"       Value="#C8C6C4"/>
            <Setter Property="BorderThickness"   Value="1"/>
            <Setter Property="Foreground"        Value="{StaticResource TextSecondaryColor}"/>
            <Setter Property="FontFamily"        Value="Segoe UI"/>
            <Setter Property="FontSize"          Value="12"/>
            <Setter Property="Height"            Value="28"/>
            <Setter Property="Padding"           Value="14,0"/>
            <Setter Property="Cursor"            Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F3F2F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="0" Background="#FFFFFF"
            BorderBrush="#E0E0E0" BorderThickness="1"
            CornerRadius="4">
        <Grid Margin="16,12,12,14">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="7"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title row -->
            <TextBlock x:Name="TitleText"
                       Grid.Row="0" Grid.Column="0"
                       Text="Kodama — Setting Up"
                       FontWeight="SemiBold"
                       FontSize="13"
                       Foreground="{StaticResource PrimaryColor}"/>

            <Button x:Name="DismissButton"
                    Grid.Row="0" Grid.Column="1"
                    Content="✕"
                    Style="{StaticResource DismissButtonStyle}"
                    ToolTip="Dismiss (setup continues in background)"/>

            <!-- Progress bar -->
            <ProgressBar x:Name="SetupProgress"
                         Grid.Row="2" Grid.ColumnSpan="2"
                         IsIndeterminate="True"
                         Height="4"
                         Foreground="{StaticResource PrimaryColor}"
                         Background="#E0E0E0"
                         BorderThickness="0"/>

            <!-- Status message -->
            <TextBlock x:Name="StatusText"
                       Grid.Row="4" Grid.ColumnSpan="2"
                       Text="Getting things ready for the first time…"
                       Foreground="{StaticResource TextSecondaryColor}"
                       FontSize="11"
                       TextWrapping="Wrap"/>

            <!-- Completion action buttons (hidden until setup finishes) -->
            <StackPanel x:Name="ActionsPanel"
                        Grid.Row="5" Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0"
                        Visibility="Collapsed">
                <Button x:Name="DismissActionButton"
                        Content="Dismiss"
                        Style="{StaticResource DismissActionButtonStyle}"
                        Margin="0,0,8,0"/>
                <Button x:Name="LaunchNowButton"
                        Content="Launch Now"
                        Style="{StaticResource ActionButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
