<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Standards Assistant Settings" 
        Width="600" Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="28"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,8,0,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Main Settings Section -->
                <GroupBox Header="General Settings" FontWeight="Bold">
                    <StackPanel>
                        <TextBlock Text="User Name (Optional):" FontWeight="Normal"/>
                        <TextBox x:Name="user_name" 
                                 ToolTip="Your name for analytics tracking"/>
                        
                        <TextBlock Text="Studio/Team (Optional):" FontWeight="Normal" Margin="0,12,0,2"/>
                        <TextBox x:Name="user_team" 
                                 ToolTip="Your studio or team name"/>
                        
                        <TextBlock Text="Feature Settings:" FontWeight="Bold" Margin="0,20,0,10" FontSize="13"/>
                        
                        <CheckBox x:Name="auto_include_screenshot" 
                                  Content="Include screenshots with queries" 
                                  FontWeight="Normal"
                                  Margin="0,5,0,5"
                                  ToolTip="Automatically capture and send Revit screenshots with each query"/>
                        
                        <CheckBox x:Name="auto_include_context" 
                                  Content="Include Revit context (active view, worksets, selection)" 
                                  FontWeight="Normal"
                                  Margin="0,5,0,5"
                                  ToolTip="Send information about your current Revit session with queries"/>
                        
                        <CheckBox x:Name="enable_actions" 
                                  Content="Enable executable actions (select elements, change worksets, etc.)" 
                                  FontWeight="Normal"
                                  Margin="0,5,0,5"
                                  ToolTip="Allow the assistant to suggest and perform actions directly in Revit"/>
                        
                        <CheckBox x:Name="enable_workflows" 
                                  Content="Enable multi-step workflows" 
                                  FontWeight="Normal"
                                  Margin="0,5,0,5"
                                  ToolTip="Allow the assistant to suggest and execute complex multi-step workflows"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Advanced Settings Expander -->
                <Expander Header="Advanced Settings" 
                         FontWeight="Bold" 
                         Margin="10,5"
                         Background="White"
                         Padding="10">
                    <StackPanel>
                        
                        <!-- Standards Source -->
                        <GroupBox Header="Standards Source" FontWeight="Bold" Margin="0,5">
                            <StackPanel>
                                <TextBlock Text="Primary Source:" FontWeight="Normal"/>
                                <ComboBox x:Name="standards_source_combo" Margin="0,0,0,10" SelectionChanged="source_changed">
                                    <ComboBoxItem Content="Notion" Tag="notion"/>
                                    <ComboBoxItem Content="SharePoint" Tag="sharepoint"/>
                                </ComboBox>
                            </StackPanel>
                        </GroupBox>

                        <!-- SharePoint Configuration -->
                        <GroupBox x:Name="sharepoint_group" Header="SharePoint Configuration" FontWeight="Bold" Margin="0,5">
                             <StackPanel>
                                <TextBlock Text="Site URL:" FontWeight="Normal"/>
                                <TextBox x:Name="sharepoint_site_url" />
                                <TextBlock Text="Tenant ID:" FontWeight="Normal" Margin="0,5,0,2"/>
                                <TextBox x:Name="sharepoint_tenant_id" />
                                <TextBlock Text="Client ID:" FontWeight="Normal" Margin="0,5,0,2"/>
                                <TextBox x:Name="sharepoint_client_id" />
                                <TextBlock Text="Client Secret:" FontWeight="Normal" Margin="0,5,0,2"/>
                                <PasswordBox x:Name="sharepoint_client_secret" Height="28" Padding="5"/>
                             </StackPanel>
                        </GroupBox>

                        <!-- Notion Configuration -->
                        <GroupBox x:Name="notion_group" Header="Notion Configuration" FontWeight="Bold" Margin="0,5">
                            <StackPanel>
                                <TextBlock Text="Database ID:" FontWeight="Normal"/>
                                <TextBox x:Name="notion_database_id" />
                                <TextBlock Text="API Key:" FontWeight="Normal" Margin="0,5,0,2"/>
                                <TextBox x:Name="notion_api_key" />
                                <TextBlock Text="Max Search Results:" FontWeight="Normal" Margin="0,12,0,2"/>
                                <TextBox x:Name="max_search_results" />
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Anthropic Configuration -->
                        <GroupBox Header="Anthropic Configuration" FontWeight="Bold" Margin="0,5">
                            <StackPanel>
                                <TextBlock Text="API Key:" FontWeight="Normal"/>
                                <TextBox x:Name="anthropic_api_key" />
                                <TextBlock Text="Model Name:" FontWeight="Normal" Margin="0,12,0,2"/>
                                <TextBox x:Name="model_name" />
                                <TextBlock Text="Max Tokens:" FontWeight="Normal" Margin="0,12,0,2"/>
                                <TextBox x:Name="max_tokens" />
                                <TextBlock Text="Temperature (0.0 - 1.0):" FontWeight="Normal" Margin="0,12,0,2"/>
                                <TextBox x:Name="temperature" />
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Logging Configuration -->
                        <GroupBox Header="Logging Configuration" FontWeight="Bold" Margin="0,10,0,5">
                            <StackPanel>
                                <CheckBox x:Name="logging_enabled" Content="Enable Logging" FontWeight="Normal"/>
                                <CheckBox x:Name="analytics_enabled" Content="Enable Analytics" FontWeight="Normal"/>
                                
                                <TextBlock Text="Central Log Path (Optional):" FontWeight="Normal" Margin="0,12,0,2"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="central_log_path" Grid.Column="0" Margin="0,0,5,0"/>
                                    <Button Content="Browse..." 
                                            Grid.Column="1" 
                                            Click="browse_log_path"
                                            Padding="10,6"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        
                    </StackPanel>
                </Expander>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="Save" 
                    Click="save_click" 
                    IsDefault="True"
                    Background="#0078D4"
                    Foreground="White"
                    BorderThickness="0"/>
            <Button Content="Cancel" 
                    Click="cancel_click"
                    IsCancel="True"/>
        </StackPanel>
        
    </Grid>
</Window>
