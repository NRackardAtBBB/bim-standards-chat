<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kodama Settings" 
        Width="600" Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F3F3">
    
    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#0078D4"/>
        <SolidColorBrush x:Key="PrimaryDarkColor" Color="#005A9E"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#F3F3F3"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextPrimaryColor" Color="#323130"/>
        <SolidColorBrush x:Key="TextSecondaryColor" Color="#605E5C"/>

        <!-- Base Styles -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,8,0,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        </Style>

        <!-- Modern Button Style -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FAFAFA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryDarkColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
            <StackPanel>
                
                <!-- Main Settings Section -->
                <GroupBox Header="General Settings">
                    <StackPanel>
                        <TextBlock Text="User Name (Optional):" FontWeight="Normal"/>
                        <TextBox x:Name="user_name" 
                                 ToolTip="Your name for analytics tracking"/>
                        
                        <TextBlock Text="Associated Avatar:" FontWeight="Normal" Margin="0,12,0,2"/>
                        <StackPanel Orientation="Horizontal">
                             <ComboBox x:Name="avatar_combo" 
                                       Width="200" 
                                       Height="30"
                                       HorizontalAlignment="Left" 
                                       Margin="0,0,15,0"
                                       VerticalContentAlignment="Center"
                                       SelectionChanged="avatar_selection_changed"/>
                             <Border Width="32" Height="32" CornerRadius="16" BorderThickness="1" BorderBrush="#E0E0E0" Background="#F3F3F3">
                                <Image x:Name="avatar_preview" Stretch="UniformToFill"/>
                             </Border>
                        </StackPanel>

                        <TextBlock Text="Studio/Team (Optional):" FontWeight="Normal" Margin="0,12,0,2"/>
                        <TextBox x:Name="user_team" 
                                 ToolTip="Your studio or team name"/>
                        
                        <TextBlock Text="Feature Settings:" FontWeight="SemiBold" Margin="0,20,0,10" FontSize="13"/>
                        
                        <CheckBox x:Name="auto_include_screenshot" 
                                  Content="Include screenshots with queries" 
                                  FontWeight="Normal"
                                  ToolTip="Automatically capture and send Revit screenshots with each query"/>
                        
                        <CheckBox x:Name="auto_include_context" 
                                  Content="Include Revit context (active view, worksets, selection)" 
                                  FontWeight="Normal"
                                  ToolTip="Send information about your current Revit session with queries"/>
                        
                        <CheckBox x:Name="enable_actions" 
                                  Content="Enable executable actions (select elements, change worksets, etc.)" 
                                  FontWeight="Normal"
                                  ToolTip="Allow the assistant to suggest and perform actions directly in Revit"/>
                        
                        <CheckBox x:Name="enable_workflows" 
                                  Content="Enable multi-step workflows" 
                                  FontWeight="Normal"
                                  ToolTip="Allow the assistant to suggest and execute complex multi-step workflows"/>
                        
                        <CheckBox x:Name="enable_vector_search" 
                                  Content="Enable semantic search (Developer Preview)" 
                                  FontWeight="Normal"
                                  ToolTip="Use AI-powered semantic search for more relevant results"
                                  Checked="vector_search_checked"
                                  Unchecked="vector_search_unchecked"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Vector Search Section (Developer Only) -->
                <GroupBox x:Name="vector_search_group" Header="Semantic Search (Developer Preview)" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="{StaticResource TextSecondaryColor}">
                            Semantic search uses AI embeddings to find conceptually similar content, providing more relevant results than keyword matching alone.
                        </TextBlock>
                        
                        <TextBlock x:Name="sync_status_text" 
                                   Text="Not synced yet" 
                                   FontSize="11" 
                                   Foreground="{StaticResource TextSecondaryColor}"
                                   Margin="0,5,0,0"/>
                        
                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Documents Indexed:" FontWeight="SemiBold" FontSize="11"/>
                                <TextBlock x:Name="indexed_docs_text" Text="0" FontSize="20" Foreground="{StaticResource PrimaryColor}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Text Chunks:" FontWeight="SemiBold" FontSize="11"/>
                                <TextBlock x:Name="indexed_chunks_text" Text="0" FontSize="20" Foreground="{StaticResource PrimaryColor}"/>
                            </StackPanel>
                        </Grid>
                        
                        <Button x:Name="reindex_vector_db_btn" 
                                Content="Re-index Vector Database" 
                                HorizontalAlignment="Left"
                                Click="reindex_vector_db_click"
                                Margin="0,15,0,0"
                                Padding="15,8"
                                Style="{StaticResource PrimaryButtonStyle}"
                                ToolTip="Rebuild the vector database with optimized chunk settings. This will improve search quality and use new performance optimizations."/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Data Management -->
                <GroupBox Header="Data Management">
                    <StackPanel>
                        <TextBlock Text="Chat History:" FontWeight="Normal"/>
                        <Button x:Name="clear_history_btn" 
                                Content="Clear All Chat History" 
                                HorizontalAlignment="Left"
                                Click="clear_history_click"
                                Margin="0,5,0,15"
                                Padding="15,5"/>
                        
                        <TextBlock Text="Terms and Disclaimer:" FontWeight="Normal"/>
                        <Button x:Name="reset_disclaimer_btn" 
                                Content="Reset Terms Acceptance (Show Disclaimer Again)" 
                                HorizontalAlignment="Left"
                                Margin="0,5,0,0"
                                Padding="15,5"
                                ToolTip="Reset your acceptance of terms so the disclaimer will appear again on next launch"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Advanced Settings Expander -->
                <Expander Header="Advanced Settings" 
                         FontWeight="SemiBold" 
                         Margin="0,5"
                         Background="{StaticResource SurfaceColor}"
                         Padding="10">
                    <StackPanel Margin="0,10,0,0">
                        
                        <!-- Standards Source -->
                        <GroupBox Header="Standards Source">
                            <StackPanel>
                                <TextBlock Text="Primary Source:" FontWeight="Normal"/>
                                <ComboBox x:Name="standards_source_combo" Margin="0,0,0,10" SelectionChanged="source_changed" Height="30" Padding="5">
                                    <ComboBoxItem Content="Notion" Tag="notion"/>
                                    <ComboBoxItem Content="SharePoint" Tag="sharepoint"/>
                                </ComboBox>
                            </StackPanel>
                        </GroupBox>

                        <!-- SharePoint Configuration -->
                        <GroupBox x:Name="sharepoint_group" Header="SharePoint Configuration">
                             <StackPanel>
                                <TextBlock Text="Site URL:" FontWeight="Normal"/>
                                <TextBox x:Name="sharepoint_site_url" />
                                <TextBlock Text="Tenant ID:" FontWeight="Normal" Margin="0,5,0,2"/>
                                <TextBox x:Name="sharepoint_tenant_id" />
                                <TextBlock Text="Client ID:" FontWeight="Normal" Margin="0,5,0,2"/>
                                <TextBox x:Name="sharepoint_client_id" />
                                <TextBlock Text="Client Secret:" FontWeight="Normal" Margin="0,5,0,2"/>
                                <PasswordBox x:Name="sharepoint_client_secret"/>                                
                                <Button x:Name="update_index_btn" 
                                        Content="Update Search Index" 
                                        HorizontalAlignment="Left"
                                        Click="update_index_click"
                                        Margin="0,15,0,0"
                                        Padding="15,5"
                                        ToolTip="Update the local index of SharePoint pages for better search results"/>                             </StackPanel>
                        </GroupBox>

                        <!-- Notion Configuration -->
                        <GroupBox x:Name="notion_group" Header="Notion Configuration">
                            <StackPanel>
                                <TextBlock Text="Database ID:" FontWeight="Normal"/>
                                <TextBox x:Name="notion_database_id" />
                                <TextBlock Text="API Key:" FontWeight="Normal" Margin="0,5,0,2"/>
                                <TextBox x:Name="notion_api_key" />
                                <TextBlock Text="Max Search Results:" FontWeight="Normal" Margin="0,12,0,2"/>
                                <TextBox x:Name="max_search_results" />
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Anthropic Configuration -->
                        <GroupBox Header="Anthropic Configuration">
                            <StackPanel>
                                <TextBlock Text="API Key:" FontWeight="Normal"/>
                                <TextBox x:Name="anthropic_api_key" />
                                <TextBlock Text="Model Name:" FontWeight="Normal" Margin="0,12,0,2"/>
                                <TextBox x:Name="model_name" />
                                <TextBlock Text="Max Tokens:" FontWeight="Normal" Margin="0,12,0,2"/>
                                <TextBox x:Name="max_tokens" />
                                <TextBlock Text="Temperature (0.0 - 1.0):" FontWeight="Normal" Margin="0,12,0,2"/>
                                <TextBox x:Name="temperature" />
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Logging Configuration -->
                        <GroupBox Header="Logging Configuration">
                            <StackPanel>
                                <CheckBox x:Name="logging_enabled" Content="Enable Logging" FontWeight="Normal"/>
                                <CheckBox x:Name="analytics_enabled" Content="Enable Analytics" FontWeight="Normal"/>
                                
                                <TextBlock Text="Central Log Path (Optional):" FontWeight="Normal" Margin="0,12,0,2"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="central_log_path" Grid.Column="0" Margin="0,0,5,0"/>
                                    <Button Content="Browse..." 
                                            Grid.Column="1" 
                                            Click="browse_log_path"
                                            Padding="10,0"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        
                    </StackPanel>
                </Expander>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="Save" 
                    Click="save_click" 
                    IsDefault="True"
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Cancel" 
                    Click="cancel_click"
                    IsCancel="True"/>
        </StackPanel>
        
    </Grid>
</Window>
